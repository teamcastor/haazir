<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Haazir" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dm_blue</item>
        <item name="colorPrimaryDark">@color/dm_light_blue</item>
        <item name="colorPrimaryVariant">@color/dm_blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOutline">@color/dm_blue_variant</item>
        <item name="colorSecondaryContainer">@color/slate_grey</item>
        <item name="dividerColor">@color/divider</item>
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Override Theme Colors-->
    </style>
    <style name="Theme.Haazir.AppBarOverlay" parent="ThemeOverlay.Material3">
        <item name="colorControlNormal">?attr/colorSurface</item>
        <item name="homeAsUpIndicator">@drawable/ic_today_24</item>
    </style>
</resources>