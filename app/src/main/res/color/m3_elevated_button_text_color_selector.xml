<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Disabled -->
  <item android:alpha="@dimen/material_emphasis_disabled" android:color="?attr/colorSurface" android:state_enabled="false" />

  <!-- Uncheckable -->
  <item android:color="?attr/colorContainer" android:state_checkable="false" />

  <!-- Checked Buttons. -->
  <item android:color="?attr/colorSecondaryContainer" android:state_checked="true" />

  <!-- Not-checked Buttons. -->
  <item android:color="?attr/colorOnSurfaceVariant" />
</selector>
