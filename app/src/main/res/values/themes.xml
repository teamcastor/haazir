<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Haazir" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dm_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOutline">@color/light_blue</item>
        <item name="colorSecondaryContainer">@color/alt_light_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="dividerColor">@color/divider</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SmarkanTextAppearance">
        <item name="android:fontFamily">@font/samarkan</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="ShapeAppearanceOverlay.Haazir.CardView.TopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/cornerRadius</item>
        <item name="cornerSizeTopLeft">@dimen/cornerRadius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.Haazir.AppBarOverlay" parent="ThemeOverlay.Material3">
        <!-- Color used by toolbar icons/text -->
        <item name="colorControlNormal">?attr/colorSurface</item>
    </style>
    <style name="Style.MonthYearPickerDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundTint">?colorSurface</item>
        <item name="headerBackgroundColor">?colorSurfaceVariant</item>
        <item name="headerTextColor">?colorOnSurfaceVariant</item>
        <item name="headerTextColorSelected">?colorOnSurface</item>
        <item name="monthBackgroundColorSelected">?colorPrimary</item>
        <item name="monthTextColor">?textColorAlertDialogListItem</item>
        <item name="monthTextColorDisabled">?colorSurfaceVariant</item>
        <item name="monthTextColorSelected">?colorSurface</item>
        <item name="yearTextColor">?textColorAlertDialogListItem</item>
        <item name="yearTextColorSelected">?colorPrimary</item>
    </style>
    <style name="App.Widget.Material3.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlActivated">?attr/colorSurface</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button.ElevatedButton</item>
        <item name="strokeWidth">0dp</item>
        <item name="elevation">5dp</item>
        <item name="cornerRadius">@dimen/cornerRadiusLeave</item>
        <item name="android:textColor">@color/m3_elevated_button_text_color_selector</item>
        <item name="backgroundTint">@color/m3_elevated_button_color_selector</item>
        <item name="android:translationZ">5dp</item>
    </style>
</resources>