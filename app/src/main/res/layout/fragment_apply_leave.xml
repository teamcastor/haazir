<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ApplyLeaveFragment">

    <TextView

        android:id="@+id/select_leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Select Type: "
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textSize="30dp"
        android:background="#DA70D6"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <CheckBox
        android:id="@+id/regular"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Regular"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/half_day"
        app:layout_constraintTop_toBottomOf="@+id/select_leave"
    android:layout_marginTop="16dp"
    android:textSize="18sp" />

    <CheckBox
        android:id="@+id/half_day"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Half Day"
        android:textColor="@color/black"
    android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_leave"
    android:textSize="18sp" />

    <TextView
        android:id="@+id/leave_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text=" Leave info: "
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:background="#DA70D6"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/half_day"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/numofdays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/leave_info"
        android:text="Enter number of days: "
        android:layout_marginStart="10dp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/numedittext"
        android:shadowColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/leave_info"
        app:layout_constraintStart_toEndOf="@+id/numofdays"
        android:hint=" Nu "
        android:backgroundTint="@color/black"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="From "
        android:textSize="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/numofdays" />
    <EditText
        android:id="@+id/fromdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/from"
        app:layout_constraintTop_toBottomOf="@+id/numofdays"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:hint="DD"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="#808080"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/fromdd"
        app:layout_constraintTop_toBottomOf="@+id/numofdays"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="/"/>
    <EditText
        android:id="@+id/frommm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/fromdd"
        app:layout_constraintTop_toBottomOf="@+id/numofdays"
        android:layout_marginTop="30dp"
       android:layout_marginStart="10dp"
        android:hint="MM"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="#808080"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/frommm"
        app:layout_constraintTop_toBottomOf="@+id/numofdays"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="/"/>
    <EditText
        android:id="@+id/fromyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/frommm"
        app:layout_constraintTop_toBottomOf="@+id/numofdays"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:hint="YY"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textColorHint="#808080"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/fromyy"
        app:layout_constraintTop_toBottomOf="@+id/numofdays"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:text="  OK  "
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="#DA70D6"/>

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To "
        android:layout_marginEnd="10dp"
        android:textSize="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/from"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/todd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/to"
        app:layout_constraintTop_toBottomOf="@+id/fromdd"
        android:layout_marginTop="32dp"
        android:layout_marginStart="77dp"
        android:hint="DD"
        android:backgroundTint="@color/black"
        android:textColorHint="#808080"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/todd"
        app:layout_constraintTop_toBottomOf="@+id/fromdd"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="/"/>
    <EditText
        android:id="@+id/tomm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/todd"
        app:layout_constraintTop_toBottomOf="@+id/fromdd"
        android:layout_marginTop="32dp"
        android:layout_marginStart="10dp"
        android:hint="MM"
        android:backgroundTint="@color/black"
        android:textColorHint="#808080"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tomm"
        app:layout_constraintTop_toBottomOf="@+id/fromdd"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="/"/>
    <EditText
        android:id="@+id/toyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tomm"
        app:layout_constraintTop_toBottomOf="@+id/fromdd"
        android:layout_marginTop="32dp"
        android:layout_marginStart="10dp"
        android:hint="YY"
        android:backgroundTint="@color/black"
        android:textColorHint="#808080"/>

    <TextView
        android:id="@+id/reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text=" Reason: "
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:background="#DA70D6"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/to"
        android:layout_marginStart="10dp"/>
    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="write here.."
        android:inputType="text|textMultiLine"
        android:layout_marginTop="20dp"
        android:textColorHint="#808080"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/reason"
        android:gravity="top"/>

