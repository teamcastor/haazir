    <LinearLayout
        android:id="@+id/numofdays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_edit_text_rounded"
        app:layout_constraintTop_toBottomOf="@+id/leave_info"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Number of Days : "
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:labelFor="@id/numofdaysedit" />
        <EditText
            android:id="@+id/numofdaysedit"
            android:inputType="number"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="From "
            android:textSize="25dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/numofdays" />
    <LinearLayout
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toEndOf="@id/from"
        android:layout_marginTop="25dp"
        android:background="@drawable/custom_edit_text_rounded"
        app:layout_constraintTop_toBottomOf="@+id/numofdays"
        >
        <TextView
            android:id="@+id/datehalf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Pick Date  "
            android:textSize="20dp"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_baseline_calendar_today_24"
            android:layout_marginStart="5dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fromdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_edit_text_rounded"
        app:layout_constraintTop_toBottomOf="@+id/from"
        >
        <TextView
            android:id="@+id/fromdatetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Pick Date  "
            android:textSize="20dp"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_baseline_calendar_today_24"
            android:layout_marginStart="5dp"
            android:labelFor="@id/numofdaysedit" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tilldate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toEndOf="@id/fromdate"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_edit_text_rounded"
        app:layout_constraintTop_toBottomOf="@+id/from"
        >
        <TextView
            android:id="@+id/tilldatetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Pick Date  "
            android:textSize="20dp"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_baseline_calendar_today_24"
            android:layout_marginStart="5dp" />
    </LinearLayout>
